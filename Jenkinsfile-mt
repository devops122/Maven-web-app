properties([
    buildDiscarder(logRotator(numToKeepStr: '3')),
    pipelineTriggers([
        pollSCM('* * * * *')
    ])
])

node('master'){  
    
    def mavenHome=tool name: "apache-maven-3.6.0", type: "maven"
    
 stage('Build')
 {
  sh  "${mavenHome}/bin/mvn clean package"
 }
   
 stage('Upload Artifacts into Nexus')
 {
  sh  "${mavenHome}/bin/mvn deploy"
 }
}
